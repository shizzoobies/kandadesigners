---
const {
  name,
  slug,
  role,
  summary,
  skills = [],
  image = "/images/people/alex.jpg",
} = Astro.props;
---

<a class="personCard cardLink reveal" href={`/people/${slug}`}>
  <div class="portrait">
    <img src={image} alt={name} loading="lazy" decoding="async" />
    <div class="portraitOverlay"></div>
    <div class="portraitMeta">
      <span class="portraitTag">View</span>
    </div>
  </div>

  <div class="personBody">
    <div class="personTop">
      <div class="personName">{name}</div>
      <div class="personRole">{role}</div>
    </div>

    <p class="personSummary">{summary}</p>

    {skills?.length > 0 && (
      <div class="tagRow">
        {skills.slice(0, 6).map((t) => (
          <span class="tag">{t}</span>
        ))}
      </div>
    )}
  </div>
</a>

---
const { name, slug, role, summary, skills, image } = Astro.props;
---
<a class="personCard card cardLink" href={`/team/${slug}`} aria-label={`View ${name}'s profile`}>
  <div class="personPortrait" aria-hidden="true">
    {image ? <img src={image} alt="" loading="lazy" decoding="async" /> : null}
    <div class="portraitOverlay"></div>
    <div class="portraitStamp">
      <span aria-hidden="true">âœ¦</span>
      <span>Portfolio</span>
    </div>
  </div>

  <div class="personBody">
    <div class="personTop">
      <div class="personMeta">
        <div class="personName">{name}</div>
        <div class="muted">{role}</div>
      </div>
      <span class="tag strong personCta">View</span>
    </div>

    <div class="muted personSummary">
      {summary}
    </div>

    <div class="personBottom">
      <div class="tagRow">
        {skills?.slice(0,4)?.map((t) => <span class="tag">{t}</span>)}
      </div>
      <span class="muted" style="font-size:.9rem;">/team/{slug}</span>
    </div>
  </div>
</a>
